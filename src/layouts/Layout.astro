---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	page: string;
}
const { page } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content="{Astro.generator}" />
    <title>{page} - Empower Accessibility</title>
  </head>
  <body>
    <Header currPage={page} />
    {/* use page label for main landmark on homepage since it isn't immediately followed by a heading */}
    <main 
      {...(page.toLowerCase() === "home" ? {"aria-label": page} : "")}
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>
