---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CookieModal from '../components/CookieModal.astro';

declare global {
  interface Window {
    dataLayer?: any[];
  }
}

interface Props {
	page: string;
}
const { page } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{page} - Empower Accessibility</title>
  </head>
  <body>
    <CookieModal />
    <a href="#main" class="dark-bg skip btn">Skip to Content</a>
    <Header currPage={page} />
    <!-- use page label for main landmark on homepage since it isn't immediately followed by a heading -->
    <main id="main"
      {...(page.toLowerCase() === "home" ? {"aria-label": page} : "")}
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>

<script>
  function loadAnalytics() {
    /* ---------- Google Analytics ---------- */
    const gaScript = document.createElement("script");
    gaScript.src = "https://www.googletagmanager.com/gtag/js?id=G-Z4Y55Y0VY3";
    gaScript.async = true;
    document.head.append(gaScript);

    gaScript.onload = () => {
      window.dataLayer = window.dataLayer || [];
      function gtag(...args: any[]){window.dataLayer?.push(args);}
      gtag("js", new Date());
      gtag("config", "G-Z4Y55Y0VY3");
    };

    /* ---------- Microsoft Clarity ---------- */
    const clarityScript = document.createElement("script");
    clarityScript.type = "text/javascript";
    clarityScript.async = true;
    clarityScript.text = `
      (function(c,l,a,r,i,t,y){
        c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
        t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
        y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
      })(window, document, "clarity", "script", "tpwficmjie");
    `;
    document.head.append(clarityScript);

    /* ---------- HubSpot ---------- */
    const hubspotScript = document.createElement("script");
    hubspotScript.src = "//js.hs-scripts.com/441982051.js";
    hubspotScript.async = true;
    document.head.append(hubspotScript);
  }
  
  if (document.cookie.includes('cookieConsent=accepted')) {
    loadAnalytics();
  } else {
    window.addEventListener("cookie:accepted", loadAnalytics);
  }
</script>
