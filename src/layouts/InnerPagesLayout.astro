---
import Layout from "./Layout.astro";

interface Props {
	page: string;
}
const { page } = Astro.props;
---

<Layout page={page}>
  <div class="page">
    <div class="page-heading">
      <slot name="page-heading" />
    </div>
    <div class="content section">
      <slot/>
    </div>
  </div>
</Layout>

<style>
  .page {
    background-color: #fff; /* to keep footer border-radius visible */
    padding-bottom: 4rem;
    display: flex;
    flex-direction: column;
  }

  :global(.page ul) {
    list-style-type: disc;
    max-width: 80ch;
    padding-left: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  :global(.page li) {
    font-size: 1.25rem;
  }

  :global(.page li::marker) {
    color: #da3a95;
  }

  .page-heading {
    background-color: #120d42;
    padding-top: 0.5rem;
    padding-bottom: 4rem;
    font-size: 2rem;
    font-weight: 800;
    line-height: 1.25;
    text-align: center;
  }

  .content.section {
    padding-bottom: 0;
    background-color: #fff;
    color: #0d1123;
  }

  @media screen and (min-width: 62em) {
    .page,
    .page-heading {
      padding-bottom: 6rem;
    }

    .page-heading {
      padding-top: 1rem;
    }
  }

  @media screen and (min-width: 80em) {
    .page-heading {
      font-size: 4rem;
      line-height: 1.125;
    }

    .content.section {
      padding-top: 3rem;
    }
  }
</style>